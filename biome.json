{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "formatWithErrors": true,
        "lineWidth": 80,
        "lineEnding": "lf"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "suspicious": {
                "noRedeclare": "off",
                "noGlobalIsNan": "off"
            },
            "correctness": {
                "recommended": true
            },
            "style": {
                "recommended": true
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "quoteProperties": "asNeeded",
            "arrowParentheses": "always",
            "trailingCommas": "all",
            "bracketSpacing": true,
            "semicolons": "always",
            "indentWidth": 4,
            "bracketSameLine": true,
            "indentStyle": "space",
            "lineEnding": "crlf"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none",
            "indentStyle": "space",
            "indentWidth": 4
        }
    }
}